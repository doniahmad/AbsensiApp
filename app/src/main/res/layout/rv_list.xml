<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/rv_layout_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <TextView
            android:id="@+id/nama_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama   : "
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/nama_rv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/nama_title"
            android:hint="txt"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/absen_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nama_title"
            android:text="Absen  : "
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/absen_rv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/absen_title"
            android:layout_below="@+id/nama_rv"
            android:hint="txt"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/kelas_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/absen_title"
            android:text="Kelas    : "
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/kelas_rv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/kelas_title"
            android:layout_below="@+id/absen_rv"
            android:hint="txt"
            android:textColor="@color/black"
            android:textSize="15sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>